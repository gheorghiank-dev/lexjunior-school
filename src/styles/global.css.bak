:root {
  /* variabilele vechi – rămân ca fallback */
  --color-bg: #f8f4ff;
  --color-surface: #ffffff;
  --color-primary: #6b8cff;
  --color-primary-soft: #c7d6ff;
  --color-secondary: #ff9ecb;
  --color-text-main: #1f2933;
  --color-text-muted: #6b7280;
  --shadow-soft: 0 18px 45px rgba(15, 23, 42, 0.06);
  --radius-xl: 1.5rem;

  /* Lex Design Tokens – colors */
  --lex-color-bg-body: var(--color-bg);
  --lex-color-bg-body-soft-pink: #ffe6f4;
  --lex-color-bg-body-soft-blue: #e3f2ff;

  --lex-color-surface-card: var(--color-surface);
  --lex-color-surface-muted: #f9fafb;

  --lex-color-primary: var(--color-primary);
  --lex-color-primary-soft: var(--color-primary-soft);
  --lex-color-accent-pink: #f9a8d4;
  --lex-color-accent-hero: #c4b5fd;

  --lex-color-success: #22c55e;
  --lex-color-success-soft: rgba(34, 197, 94, 0.12);
  --lex-color-warning: #f59e0b;
  --lex-color-warning-soft: rgba(245, 158, 11, 0.12);
  --lex-color-danger: #ef4444;
  --lex-color-danger-soft: rgba(239, 68, 68, 0.12);

  --lex-color-text-main: var(--color-text-main);
  --lex-color-text-muted: var(--color-text-muted);
  --lex-color-text-on-primary: #312e81;
  --lex-color-text-on-success: #14532d;

  /* Radii */
  --lex-radius-card: var(--radius-xl);
  --lex-radius-pill: 999px;
  --lex-radius-chip: 14px;

  /* Shadows */
  --lex-shadow-card: var(--shadow-soft);
  --lex-shadow-button: 0 10px 30px rgba(15, 23, 42, 0.12);
  --lex-shadow-elevated: 0 32px 80px rgba(15, 23, 42, 0.16);

  /* Spacing */
  --lex-spacing-xs: 0.25rem;
  --lex-spacing-sm: 0.5rem;
  --lex-spacing-md: 0.75rem;
  --lex-spacing-lg: 1rem;
  --lex-spacing-xl: 1.5rem;
  --lex-spacing-2xl: 2rem;

  /* Typography scale – pentru mai târziu */
  --lex-font-size-page-title: 2.1rem;
  --lex-font-size-page-subtitle: 1rem;
  --lex-font-size-card-title: 1.05rem;
  --lex-font-size-card-description: 0.9rem;
  --lex-font-size-meta: 0.8rem;

  /* Hub buttons – CTA pentru cardurile de navigație (Grammar hub / Tenses / Present Simple hub) */
  --lex-color-hub-cta-start: #6b8cff; /* albastru-mov Lex */
  --lex-color-hub-cta-end: #c4b5fd; /* mov-liliac pastel */

  /* Present Simple – Color Coding System v1 (ambient only) */
  --ps-present-bg: #fff7d6; /* galben foarte soft (timpul: Present) */
  --ps-present-glow: rgba(
    245,
    158,
    11,
    0.14
  ); /* glow discret (accent: Simple) */
  --ps-simple-accent: #f59e0b; /* portocaliu (nefolosit încă pentru UI) */

  /* Lex Theme – semantic UI tokens (themeable) */
  --lex-header-bg: linear-gradient(
    to bottom,
    rgba(248, 244, 255, 0.94),
    rgba(248, 244, 255, 0.88),
    rgba(248, 244, 255, 0.75)
  );
  --lex-header-border: 1px solid rgba(148, 163, 184, 0.25);

  /* Buttons */
  --lex-btn-primary-bg: linear-gradient(
    135deg,
    var(--lex-color-accent-hero),
    var(--lex-color-accent-pink)
  );
  --lex-btn-primary-color: var(--lex-color-text-on-primary);
  --lex-btn-primary-shadow: 0 10px 25px rgba(192, 132, 252, 0.28);

  --lex-btn-soft-bg: linear-gradient(
    135deg,
    var(--lex-color-primary-soft),
    #f5d0fe
  );
  --lex-btn-soft-color: var(--lex-color-text-on-primary);
  --lex-btn-soft-shadow: 0 10px 25px rgba(129, 140, 248, 0.25);

  --lex-btn-outline-bg: linear-gradient(135deg, #bbf7d0, #fef9c3);
  --lex-btn-outline-color: var(--lex-color-text-on-success);
  --lex-btn-outline-shadow: 0 10px 25px rgba(34, 197, 94, 0.18);

  --lex-btn-hub-bg: linear-gradient(
    135deg,
    var(--lex-color-hub-cta-start),
    var(--lex-color-hub-cta-end)
  );
  --lex-btn-hub-color: var(--lex-color-text-on-primary);
  --lex-btn-hub-shadow: 0 10px 25px rgba(129, 140, 248, 0.25);

  /* Chips / small buttons (Retry for key, etc.) */
  --lex-chip-border: 1px solid var(--color-primary-soft);
  --lex-chip-bg: #f1f5ff;
  --lex-chip-bg-hover: #e0e7ff;
  --lex-chip-color: inherit;

  /* Rune buttons */
  --lex-accent-soft: #e0e7ff;
  --lex-accent-soft-stronger: #c7d2fe;
  --lex-focus-outline: 2px solid #4f46e5;

  /* Sentence builder */
  --lex-sb-zone-border: 2px dashed #c7d2fe;
  --lex-sb-zone-bg: rgba(239, 246, 255, 0.85);
  --lex-sb-token-border: 1px solid #4f46e5;
  --lex-sb-token-bg: #eef2ff;
  --lex-sb-token-bg-hover: #e0e7ff;
  --lex-sb-token-color: inherit;

  /* Matching */
  --lex-matching-row-bg: #eef2ff;
  --lex-matching-row-border: 2px dashed #c7d2fe;
  --lex-matching-slot-border: 2px dashed #c7d2fe;
  --lex-matching-slot-bg: rgba(239, 246, 255, 0.85);
  --lex-matching-slot-bg-hover: var(--lex-matching-slot-bg);

  /* Present Simple – structure box (Affirmative theory) */
  --lex-ps-structure-bg: linear-gradient(
    135deg,
    rgba(199, 214, 255, 0.35),
    rgba(244, 219, 255, 0.4)
  );
  --lex-ps-structure-border: 1px solid rgba(129, 140, 248, 0.16);
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family:
    system-ui,
    -apple-system,
    BlinkMacSystemFont,
    "Segoe UI",
    sans-serif;
  background: radial-gradient(
    circle at top left,
    #ffe6f4 0,
    #f8f4ff 35%,
    #e3f2ff 100%
  );
  color: var(--color-text-main);
}

a {
  color: inherit;
  text-decoration: none;
}

.app-shell {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Present Simple – ambient background + persistent glow band (no layout impact) */
.app-shell.present-simple-theme {
  /* Base color so we never "fall through" to the global (mov) body gradient */
  background-color: var(--ps-present-bg);

  /* 2-color system (Present = yellow, Simple = orange): left → right, very soft */
  background:
    radial-gradient(
      900px 140px at 50% 0%,
      var(--ps-present-glow) 0%,
      rgba(245, 158, 11, 0) 70%
    ),
    linear-gradient(
      90deg,
      rgba(255, 247, 214, 0.95) 0%,
      rgba(255, 236, 190, 0.7) 55%,
      rgba(255, 224, 150, 0.55) 100%
    );
  /* Theme overrides via CSS variables (keeps UI scalable across tenses) */
  --lex-header-bg: linear-gradient(
    to bottom,
    rgba(255, 247, 214, 0.92),
    rgba(255, 236, 190, 0.86),
    rgba(255, 224, 150, 0.72)
  );
  --lex-header-border: 1px solid rgba(245, 158, 11, 0.18);

  --lex-btn-primary-bg: linear-gradient(
    90deg,
    rgba(255, 247, 214, 0.95) 0%,
    rgba(255, 236, 190, 0.9) 55%,
    rgba(255, 209, 120, 0.95) 100%
  );
  --lex-btn-primary-color: rgba(61, 35, 0, 0.92);
  --lex-btn-primary-shadow: 0 10px 25px rgba(245, 158, 11, 0.25);

  --lex-btn-soft-bg: linear-gradient(
    90deg,
    rgba(255, 247, 214, 0.8) 0%,
    rgba(255, 236, 190, 0.75) 55%,
    rgba(255, 224, 150, 0.8) 100%
  );
  --lex-btn-soft-color: rgba(61, 35, 0, 0.88);
  --lex-btn-soft-shadow: 0 10px 25px rgba(245, 158, 11, 0.18);

  --lex-btn-outline-bg: linear-gradient(
    90deg,
    rgba(255, 247, 214, 0.85) 0%,
    rgba(255, 236, 190, 0.8) 60%,
    rgba(255, 209, 120, 0.85) 100%
  );
  --lex-btn-outline-color: rgba(61, 35, 0, 0.92);
  --lex-btn-outline-shadow: 0 10px 25px rgba(245, 158, 11, 0.16);

  --lex-btn-hub-bg: linear-gradient(
    90deg,
    rgba(255, 247, 214, 0.9) 0%,
    rgba(255, 236, 190, 0.85) 55%,
    rgba(255, 209, 120, 0.92) 100%
  );
  --lex-btn-hub-color: rgba(61, 35, 0, 0.92);
  --lex-btn-hub-shadow: 0 10px 25px rgba(245, 158, 11, 0.22);

  --lex-chip-border: 1px solid rgba(245, 158, 11, 0.3);
  --lex-chip-bg: rgba(255, 247, 214, 0.85);
  --lex-chip-bg-hover: rgba(255, 236, 190, 0.85);
  --lex-chip-color: rgba(61, 35, 0, 0.9);

  --lex-accent-soft: rgba(255, 247, 214, 0.85);
  --lex-accent-soft-stronger: rgba(255, 236, 190, 0.85);
  --lex-focus-outline: 2px solid rgba(245, 158, 11, 0.95);

  --lex-sb-zone-border: 2px dashed rgba(245, 158, 11, 0.28);
  --lex-sb-zone-bg: rgba(255, 247, 214, 0.55);
  --lex-sb-token-border: 1px solid rgba(245, 158, 11, 0.55);
  --lex-sb-token-bg: rgba(255, 247, 214, 0.9);
  --lex-sb-token-bg-hover: rgba(255, 236, 190, 0.9);
  --lex-sb-token-color: rgba(61, 35, 0, 0.92);

  --lex-matching-row-bg: linear-gradient(
    90deg,
    rgba(255, 247, 214, 0.6) 0%,
    rgba(255, 236, 190, 0.52) 55%,
    rgba(255, 224, 150, 0.48) 100%
  );
  --lex-matching-row-border: 2px dashed rgba(245, 158, 11, 0.28);
  --lex-matching-slot-border: 2px dashed rgba(245, 158, 11, 0.28);
  --lex-matching-slot-bg: rgba(255, 247, 214, 0.72);
  --lex-matching-slot-bg-hover: rgba(255, 236, 190, 0.72);

  --lex-ps-structure-bg: linear-gradient(
    90deg,
    rgba(255, 247, 214, 0.78) 0%,
    rgba(255, 236, 190, 0.7) 55%,
    rgba(255, 224, 150, 0.68) 100%
  );
  --lex-ps-structure-border: 1px solid rgba(245, 158, 11, 0.18);
}

.app-main {
  flex: 1;
  padding: 1.5rem 1.5rem 2rem;
  max-width: 1120px;
  margin: 0 auto;
}

@media (min-width: 768px) {
  .app-main {
    padding-top: 2.5rem;
  }
}

/* Page layout & headers */

.page {
  display: flex;
  flex-direction: column;
  gap: var(--lex-spacing-xl);
}

/* header generic pentru paginile de teorie / hartă */
.page-header {
  margin-bottom: var(--lex-spacing-xl);
  display: flex;
  flex-direction: column;
  gap: var(--lex-spacing-sm);
}

.page-title {
  font-size: var(--lex-font-size-page-title);
  font-weight: 700;
  letter-spacing: -0.02em;
  color: var(--lex-color-text-main);
}

.page-lead,
.page-subtitle {
  font-size: var(--lex-font-size-page-subtitle);
  color: var(--lex-color-text-muted);
  max-width: 46rem;
  line-height: 1.6;
}

/* Simple cards & buttons */

.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.5rem;
}

.card {
  background: var(--lex-color-surface-card);
  border-radius: var(--lex-radius-card);
  box-shadow: var(--lex-shadow-card);
  padding: var(--lex-spacing-xl);
  display: flex;
  flex-direction: column;
  gap: var(--lex-spacing-sm);
}

.card-title {
  font-weight: 650;
  font-size: var(--lex-font-size-card-title);
  color: var(--lex-color-text-main);
}

.card-tag {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.65rem;
  border-radius: 999px;
  font-size: 0.75rem;
  background: rgba(107, 140, 255, 0.1);
  color: #374151;
}

.card-tag-soon {
  background: rgba(148, 163, 184, 0.16);
}

.card-description {
  font-size: var(--lex-font-size-card-description);
  color: var(--lex-color-text-muted);
  line-height: 1.6;
}

/* Lists & text rhythm inside cards */

.card p + ul,
.card p + ol {
  margin-top: 0.5rem;
}

.card ul,
.card ol {
  padding-left: 1.1rem;
  margin: 0;
  display: grid;
  gap: 0.25rem;
}

.card li {
  line-height: 1.5;
}

.section-complete-card {
  margin-top: 2rem;
  text-align: center;
}

/* Lex Junior – homepage rules layout */

.lex-rules-section {
  margin-top: var(--lex-spacing-2xl);
}

.lex-rules-grid {
  display: grid;
  gap: var(--lex-spacing-lg);
}

/* pe ecrane mai mari, 2 coloane */
@media (min-width: 900px) {
  .lex-rules-grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

/* card generic din grid */
.lex-rules-card {
  max-width: 960px;
}

/* intro-ul ocupă tot rândul */
.lex-rules-card--intro {
  grid-column: 1 / -1;
}

/* titluri de card – mai mari și mai catchy */
.lex-rules-section-title {
  font-size: 1.05rem;
  font-weight: 650;
  margin-bottom: 0.4rem;
  color: var(--lex-color-text-main);
}

.lex-rules-steps {
  padding-left: 1.25rem;
  display: grid;
  gap: 0.5rem;
}

.lex-rules-sublist {
  padding-left: 1.25rem;
  margin-top: 0.35rem;
  display: grid;
  gap: 0.25rem;
}

.lex-rules-card .ps-list {
  margin-top: 0.25rem;
}

.lex-rules-card .ps-text + .ps-list {
  margin-top: 0.35rem;
}

/* emoji-ul lui Lex folosit inline în texte */
.lex-emoji {
  display: inline-block;
  width: 2.4em;
  height: 2.4em;
  vertical-align: -0.35em;
}

/* === Present Simple – structure box (Affirmative theory) === */

.ps-structure-box {
  margin-top: var(--lex-spacing-md);
  padding: var(--lex-spacing-md);
  border-radius: 1.2rem;
  background: var(--lex-ps-structure-bg);
  border: var(--lex-ps-structure-border);
}

.ps-structure-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: var(--lex-spacing-sm);
  margin-top: var(--lex-spacing-sm);
}

.ps-structure-col {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 1rem;
  padding: 0.6rem 0.75rem;
  box-shadow: 0 8px 20px rgba(15, 23, 42, 0.04);
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.ps-structure-label {
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  color: var(--lex-color-text-muted);
}

.ps-structure-example {
  font-weight: 600;
  color: var(--lex-color-text-main);
}

.ps-structure-note {
  font-size: 0.8rem;
  color: var(--lex-color-text-muted);
}

.ps-structure-title {
  font-size: 0.95rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--lex-color-text-main);
}

/* Back-link de pe paginile de teorie */
.page-backlink-row {
  margin-bottom: 0.75rem;
}

/* Layout 2 coloane – reguli (stânga) + exemple (dreapta) */
.columns-2 {
  display: grid;
  grid-template-columns: minmax(0, 1.4fr) minmax(0, 1fr);
  gap: 1.25rem;
  align-items: flex-start;
  margin-top: 1.25rem;
}

@media (max-width: 768px) {
  .columns-2 {
    grid-template-columns: minmax(0, 1fr);
  }
}

/* Chenarele pentru reguli și exemple din Present Simple */
.rule-box,
.example-box {
  background: var(--lex-color-surface-card);
  border-radius: 0.9rem;
  border: 1px solid rgba(148, 163, 184, 0.4);
  padding: 1rem 1.25rem;
  box-shadow: 0 10px 30px rgba(15, 23, 42, 0.04);
}

.rule-box h3,
.example-box h3 {
  margin: 0 0 0.5rem;
  font-size: 0.95rem;
  font-weight: 600;
  color: var(--lex-color-text-main);
}

/* Exemple compacte, pe rând nou */
.example-inline {
  display: block;
  margin: 0.15rem 0;
}

/* Lista mică de reguli din cardul 2 (spelling rules) */
.ps-mini-list {
  margin: 0;
  padding-left: 1.1rem;
  font-size: 0.9rem;
  line-height: 1.5;
}

.ps-mini-list li + li {
  margin-top: 0.75rem;
}

.rule-highlight {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  border-radius: 999px;
  background: #ffffff;
  border: 1px dashed rgba(148, 163, 184, 0.8);
  font-weight: 600;
}

.rule-highlight-emphasis {
  color: #dc2626;
}

/* === Present Simple – common mistakes (wrong / correct) === */

.ps-mistakes-box {
  margin-top: var(--lex-spacing-md);
  padding: 0; /* nu mai avem covor general colorat */
  border-radius: 0;
  background: transparent;
  border: none;
}

.ps-mistakes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: var(--lex-spacing-sm);
}

/* cele două carduri interioare: stânga = GREȘIT, dreapta = CORECT */
.ps-mistakes-grid > div {
  border-radius: 1rem;
  padding: 0.75rem 0.9rem;
  background: #ffffff;
}

.ps-mistakes-grid > div:nth-child(1) {
  background: rgba(254, 242, 242, 0.9); /* roșiatic pal */
  border: 1px solid rgba(248, 113, 113, 0.35);
}

.ps-mistakes-grid > div:nth-child(2) {
  background: rgba(240, 253, 244, 0.9); /* verde pal */
  border: 1px solid rgba(34, 197, 94, 0.35);
}

.ps-mistakes-column-title {
  font-size: 0.85rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  margin-bottom: 0.35rem;
}

.ps-mistakes-column-title--wrong {
  color: #b91c1c;
}

.ps-mistakes-column-title--correct {
  color: #16a34a;
}

.ps-mistakes-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: grid;
  gap: 0.25rem;
}

.ps-mistake-item {
  font-size: 0.9rem;
  line-height: 1.4;
}

/* dacă ai pus clasele astea pe <li>, le păstrăm ca accent subtil */
.ps-mistake-item--wrong {
  border-left: 3px solid rgba(248, 113, 113, 0.85);
  padding-left: 0.4rem;
}

.ps-mistake-item--correct {
  border-left: 3px solid rgba(34, 197, 94, 0.9);
  padding-left: 0.4rem;
}

/* Buttons */

.btn-row {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  margin-top: 1rem;
}

.btn-row .btn {
  flex: 1 1 0;
  text-align: center;
  justify-content: center;
}

.btn {
  border-radius: var(--lex-radius-pill);
  border: none;
  padding: 0.6rem 1.25rem;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.35rem;
  box-shadow: var(--lex-shadow-button);
  transition:
    transform 0.15s ease,
    box-shadow 0.15s ease,
    filter 0.15s ease;
  font-family: inherit;
  line-height: 1.2;
}

/* să nu mai existe diferență între <button> și <a> cu clasa .btn */
button.btn,
a.btn {
  font: inherit;
  text-decoration: none;
}

/* CTA principal – ex: „Începe aventura Present Simple” */
.btn-primary {
  background: var(--lex-btn-primary-bg);
  color: var(--lex-btn-primary-color);
  border: none;
  box-shadow: var(--lex-btn-primary-shadow);
}

/* butoane pastel de navigație blândă – Înapoi la prezentare / modul */
.btn-soft,
.btn-secondary {
  background: var(--lex-btn-soft-bg);
  color: var(--lex-btn-soft-color);
  border: none;
  box-shadow: var(--lex-btn-soft-shadow);
}

/* butoane pentru hartă / progres / navigație importantă */
.btn-outline {
  background: var(--lex-btn-outline-bg);
  color: var(--lex-btn-outline-color);
  border: none;
  box-shadow: var(--lex-btn-outline-shadow);
}

/* Hub buttons – pentru cardurile de navigație (Home / Grammar hub / Tenses / Present Simple hub) */
.btn-hub {
  background: var(--lex-btn-hub-bg);
  color: var(--lex-btn-hub-color);
  border: none;
  box-shadow: var(--lex-btn-hub-shadow);
}

.btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 14px 36px rgba(15, 23, 42, 0.18);
  filter: brightness(1.03);
}

/* Header */

.app-header {
  position: sticky;
  top: 0;
  z-index: 20;
  backdrop-filter: blur(14px);
  background: var(--lex-header-bg);
  border-bottom: var(--lex-header-border);
}

.app-header-inner {
  max-width: 1120px;
  margin: 0 auto;
  padding: 0.75rem 1.5rem;
  display: flex;
  align-items: center;
  gap: 1.25rem;
  justify-content: space-between;
}

.brand-mark {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.brand-avatar {
  width: 40px;
  height: 40px;
  border-radius: 999px;
  background: radial-gradient(circle at 30% 20%, #ffffff, #6b8cff);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 30px rgba(37, 99, 235, 0.45);
  overflow: hidden;
}

.brand-avatar img {
  width: 38px;
  height: 38px;
  object-fit: contain;
}

.brand-title {
  display: flex;
  flex-direction: column;
}

.brand-title-main {
  font-size: 1.1rem;
  font-weight: 700;
  letter-spacing: 0.02em;
}

.brand-title-sub {
  font-size: 0.8rem;
  color: var(--color-text-muted);
}

.header-nav {
  display: flex;
  gap: 0.5rem;
}

.nav-link {
  border-radius: 999px;
  padding: 0.4rem 0.9rem;
  font-size: 0.85rem;
  border: 1px solid transparent;
  color: #4b5563;
}

.nav-link-active {
  border-color: rgba(107, 114, 128, 0.4);
  background: rgba(255, 255, 255, 0.9);
}

/* Hero */

.hero {
  display: grid;
  grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
  gap: 2rem;
  align-items: center;
}

.hero-title {
  font-size: clamp(2rem, 3vw, 2.6rem);
  line-height: 1.05;
  letter-spacing: -0.02em;
}

.hero-highlight {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  padding: 0.25rem 0.75rem;
  border-radius: 999px;
  font-size: 0.8rem;
  margin-bottom: 0.75rem;
  gap: 0.4rem;
  box-shadow: 0 12px 35px rgba(148, 163, 184, 0.4);
}

.hero-description {
  margin-top: 0.75rem;
  font-size: 0.95rem;
  color: var(--color-text-muted);
}

.hero-visual {
  position: relative;
  height: 260px;
}

.hero-orbit {
  position: absolute;
  inset: 0;
  border-radius: 999px;
  background: radial-gradient(
    circle at 20% 0%,
    rgba(255, 255, 255, 0.9),
    rgba(129, 140, 248, 0.16)
  );
  box-shadow: 0 32px 80px rgba(15, 23, 42, 0.16);
  overflow: hidden;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-lex {
  width: 140px;
  height: 140px;
  border-radius: 40%;
  background: radial-gradient(circle at 20% 0%, #ffffff, #60a5fa);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.hero-lex img {
  width: 130px;
  height: 130px;
  object-fit: contain;
}

.hero-badge {
  position: absolute;
  bottom: 1rem;
  right: 1.25rem;
  background: rgba(15, 23, 42, 0.92);
  color: white;
  border-radius: 999px;
  padding: 0.35rem 0.8rem;
  font-size: 0.75rem;
  display: flex;
  align-items: center;
  gap: 0.4rem;
}

.hero-badge-dot {
  width: 8px;
  height: 8px;
  border-radius: 999px;
  background: #4ade80;
}

.hero-badge-label {
  opacity: 0.92;
}
/* === Present Simple – React Room 1 helpers === */

.hud {
  display: flex;
  align-items: center;
  gap: 1.25rem;
  padding: 1rem 1.25rem;
  border-radius: var(--radius-xl);
  background: rgba(255, 255, 255, 0.85);
  box-shadow: var(--shadow-soft);
}

.hud canvas {
  flex-shrink: 0;
}

.hud .info {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  font-size: 0.95rem;
}

.hud .key-status {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  font-weight: 600;
}

.hud .key-status .icon {
  font-size: 1.25rem;
}

.hud .message {
  margin-top: 0.25rem;
  font-size: 0.9rem;
  color: var(--color-text-muted);
}

.hud .message--success {
  color: #16a34a;
}

.hud .message--info {
  color: var(--color-text-muted);
}

.retry-for-key {
  margin-top: 0.5rem;
  padding: 0.35rem 0.9rem;
  border-radius: 999px;
  border: var(--lex-chip-border);
  background: var(--lex-chip-bg);
  color: var(--lex-chip-color);
  font-size: 0.85rem;
  cursor: pointer;
}

.retry-for-key:hover {
  background: var(--lex-chip-bg-hover);
}

/* exercițiul din Camera 1 React */
.exercise-row--mcq {
  flex-direction: column;
  align-items: flex-start;
}

.mcq-options {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 0.25rem;
}


/* ✅ Pill gap look pentru textarea (rows=1) */
.exercise-input.pill-gap {
  resize: none;
  overflow: hidden;

  border-radius: 999px;
  height: 32px;
  min-height: 32px;

  padding: 4px 12px;
  line-height: 20px;

  background: #eafaf0;
  border: 2px solid #1fb15c;

  width: 200px;
  max-width: 100%;
}

/* păstrează highlight-ul existent, dar îl face “pill” */
.exercise-input-correct.pill-gap {
  background: #eafaf0;
}

.exercise-input-incorrect.pill-gap {
  background: #fff0f0;
}

.exercise-listen-btn {
  border: none;
  background: transparent;
  cursor: pointer;
  font-size: 1.1rem;
}

/* cutia de rezultate */
.result-box {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 1rem;
  padding: 0.75rem 1rem;
  font-size: 0.95rem;
}

/* dev bar */
.dev-bar {
  margin-top: 1.5rem;
  display: flex;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.dev-btn {
  padding: 0.4rem 0.9rem;
  border-radius: 999px;
  border: 1px solid #d4d4ff;
  font-size: 0.8rem;
  letter-spacing: 0.01em;
  text-transform: uppercase;
  cursor: pointer;
}

.dev-btn-secondary {
  background: #f9fafb;
}

.dev-btn-danger {
  background: #fef2f2;
  border-color: #fecaca;
  color: #b91c1c;
}

.exercise-subtitle {
  font-weight: 600;
  margin: 0.4rem 0;
}

/* Present Simple – generic theory layout for imported HTML cards (Uses, etc.) */
.theory-section {
  display: flex;
  flex-direction: column;
  gap: 1.75rem;
}

.theory-card {
  background: var(--color-surface);
  border-radius: var(--radius-xl);
  padding: 1.75rem 2rem;
  box-shadow: var(--shadow-soft);
}

.theory-card h2 {
  font-size: 1.25rem;
  margin-bottom: 0.75rem;
  color: var(--color-text-main);
}

.theory-card p {
  margin-bottom: 0.5rem;
  color: var(--color-text-muted);
}

.theory-card ul {
  margin: 0.75rem 0 0;
  padding-left: 1.25rem;
}

/* Uses – Room 7: "traduceri cu rune" */

.exercise-row--rune {
  flex-direction: column;
  align-items: flex-start;
}

.sentence-native {
  margin: 0.2rem 0;
}

.rune-row {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4rem;
  margin-top: 0.25rem;
}

.rune-btn {
  border: none;
  border-radius: 999px;
  padding: 0.15rem 0.6rem;
  font-size: 0.85rem;
  cursor: pointer;
  background: var(--lex-accent-soft, #e0e7ff);
  transition:
    background-color 0.15s ease,
    transform 0.1s ease;
}

.rune-btn:hover {
  background: var(--lex-accent-soft-stronger, #c7d2fe);
  transform: translateY(-1px);
}

.rune-btn:focus-visible {
  outline: var(--lex-focus-outline);
  outline-offset: 2px;
}

.hint-text {
  margin-top: 0.3rem;
  font-size: 0.85rem;
  font-style: italic;
  color: #4b5563;
}

.answer-wrapper {
  margin-top: 0.35rem;
}

.translation-input {
  width: 100%;
  max-width: 420px;
  padding: 0.35rem 0.6rem;
  border-radius: 999px;
  border: 1px solid #d1d5db;
  font-size: 0.95rem;
}

.mini-message {
  margin-top: 0.3rem;
  font-size: 0.85rem;
}

.mini-message.ok {
  color: #16a34a;
  font-weight: 600;
}

.mini-message.error {
  color: #dc2626;
  font-weight: 600;
}

/* Uses – card-based MCQ (Rooms 5 & 6) */

.exercise-row--uses-card {
  flex-direction: column;
  align-items: stretch;
}

.uses-card-body {
  width: 100%;
}

.uses-card-options {
  margin-top: 0.5rem;
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.uses-card-option {
  border-radius: 999px;
  border: 1px solid var(--border-subtle, #e5e7eb);
  padding: 0.25rem 0.75rem;
  font-size: 0.9rem;
  background-color: #ffffff;
  cursor: pointer;
  transition:
    background-color 0.15s ease,
    border-color 0.15s ease,
    transform 0.1s ease;
}

.uses-card-option:hover {
  background-color: var(--lex-accent-soft, #e0f2fe);
  border-color: var(--lex-accent, #0ea5e9);
  transform: translateY(-1px);
}

.uses-card-option.is-selected {
  background-color: var(--lex-accent-soft, #e0f2fe);
  border-color: var(--lex-accent, #0ea5e9);
}

.uses-card-option.is-correct {
  background-color: #dcfce7;
  border-color: #16a34a;
}

.uses-card-option.is-incorrect {
  background-color: #fee2e2;
  border-color: #dc2626;
}

/* Vertical spacing between stacked cards */
.card + .card {
  margin-top: 1.5rem;
}

/* Header row for exercise text + listen button */
.exercise-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.75rem;
}

/* Make sure text wraps nicely and the listen button stays aligned */
.exercise-header-row .exercise-text {
  margin: 0;
}

/* Uses card header for MCQ cards */
.uses-card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.75rem;
}

.uses-card-header .exercise-text {
  margin: 0;
}

/* Short answer rows (yes/no) with inline status icon */
.short-answer-row {
  display: flex;
  align-items: flex-start;
  gap: 0.5rem;
  margin-top: 0.5rem;
}

.short-answer-status {
  width: 1.5rem;
  flex-shrink: 0;
  text-align: center;
  font-size: 1rem;
  line-height: 1.5rem;
}

.short-answer-status--correct {
  color: #16a34a;
}

.short-answer-status--incorrect {
  color: #dc2626;
}

/* === Matching pairs layout – Time Expressions & other matching rooms === */
.matching-layout {
  display: grid;
  grid-template-columns: minmax(0, 2fr) minmax(0, 1.4fr);
  gap: 2rem;
  margin-top: 1.5rem;
  align-items: flex-start;
}

.matching-left {
  min-width: 0;
}

.matching-right {
  min-width: 0;
}

.exercise-list.matching-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.exercise-row--matching {
  padding: 0.75rem 1rem 1rem;
  border-radius: 1.1rem;
  background: var(--lex-matching-row-bg);
  border: var(--lex-matching-row-border);
  box-shadow: 0 10px 30px rgba(15, 23, 42, 0.04);
}

.exercise-row--matching .exercise-header-row {
  display: flex;
  align-items: flex-start;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
}

.exercise-row--matching .exercise-text {
  margin: 0;
  font-size: 0.95rem;
}

.matching-slot {
  margin-top: 0.25rem;
  border-radius: 999px;
  border: var(--lex-matching-slot-border);
  background: var(--lex-matching-slot-bg);
  padding: 0.4rem 0.9rem;
  min-height: 2.2rem;
  display: flex;
  align-items: center;
  transition:
    background 0.15s ease,
    border-color 0.15s ease,
    box-shadow 0.15s ease;
  cursor: pointer;
}

.matching-slot:hover {
  background: var(--lex-matching-slot-bg-hover);
}

.matching-slot--empty .matching-slot-placeholder {
  color: var(--color-text-muted);
  font-size: 0.85rem;
}

.matching-slot-label {
  font-weight: 500;
}

.matching-slot--correct {
  border-color: #22c55e;
  background: #dcfce7;
  box-shadow: 0 6px 18px rgba(34, 197, 94, 0.25);
}

.matching-slot--incorrect {
  border-color: #ef4444;
  background: #fee2e2;
  box-shadow: 0 6px 18px rgba(239, 68, 68, 0.25);
}

.matching-options {
  background: var(--color-surface);
  border-radius: var(--radius-xl);
  padding: 1.25rem 1.25rem 1.4rem;
  box-shadow: var(--shadow-soft);
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.matching-options::before {
  content: "Expresii de timp";
  display: block;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--color-text-muted);
  margin-bottom: 0.25rem;
}

.matching-option {
  width: 100%;
  border: none;
  border-radius: 999px;
  padding: 0.55rem 1rem;
  font-size: 0.9rem;
  text-align: left;
  background: #ffffff;
  box-shadow: 0 10px 30px rgba(15, 23, 42, 0.06);
  cursor: grab;
  transition:
    transform 0.1s ease,
    box-shadow 0.1s ease,
    background 0.1s ease,
    opacity 0.1s ease;
}

.matching-option:hover {
  transform: translateY(-1px);
  box-shadow: 0 14px 36px rgba(15, 23, 42, 0.09);
}

.matching-option--selected {
  outline: 2px solid var(--color-primary);
  outline-offset: 1px;
}

.matching-option--used {
  opacity: 0.6;
}

@media (max-width: 900px) {
  .matching-layout {
    grid-template-columns: minmax(0, 1fr);
  }

  .matching-right {
    margin-top: 1.5rem;
  }
}

/* Sentence Builder (Time Expressions – Camera 5 și viitoare camere similare) */
.exercise-list.sentence-builder-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.9rem;
}

.exercise-row--sentence-builder {
  padding: 0.85rem 1rem 1.1rem;
  border-radius: 1.1rem;
  background: var(--color-surface);
  box-shadow: var(--shadow-soft);
  border: 2px solid transparent;
  transition:
    border-color 0.15s ease,
    box-shadow 0.15s ease,
    background-color 0.15s ease;
}

.exercise-row--sentence-builder.exercise-row--correct {
  border-color: #22c55e;
  box-shadow: 0 8px 20px rgba(34, 197, 94, 0.25);
}

.exercise-row--sentence-builder.exercise-row--incorrect {
  border-color: #f97373;
  box-shadow: 0 8px 20px rgba(248, 113, 113, 0.25);
}

.sentence-builder-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 0.75rem;
  margin-bottom: 0.6rem;
}

.sentence-builder-question {
  margin: 0;
  font-size: 0.98rem;
  line-height: 1.4;
  display: flex;
  align-items: baseline;
  gap: 0.4rem;
}

.sentence-builder-answer-zone {
  display: flex;
  align-items: center;
  gap: 0.75rem;

  margin-top: 0.4rem;
  border-radius: 999px;
  border: var(--lex-sb-zone-border);
  background: var(--lex-sb-zone-bg);
  padding: 0.45rem 0.9rem;
  min-height: 2.2rem;
  display: flex;
  align-items: center;
}

.sentence-builder-placeholder {
  font-size: 0.88rem;
  color: var(--color-text-muted);
}

.sentence-builder-tokens {
  display: flex;
  flex-wrap: wrap;
  gap: 0.35rem;
}

.sentence-builder-token {
  border-radius: 999px;
  border: var(--lex-sb-token-border);
  padding: 0.25rem 0.7rem;
  background: var(--lex-sb-token-bg);
  color: var(--lex-sb-token-color);
  font-size: 0.9rem;
  cursor: pointer;
  transition:
    background-color 0.15s ease,
    transform 0.1s ease;
}

.sentence-builder-token:hover {
  background-color: var(--lex-sb-token-bg-hover);
  transform: translateY(-1px);
}

.sentence-builder-bank {
  margin-top: 0.6rem;
}

.sentence-builder-bank-title {
  font-size: 0.82rem;
  color: var(--color-text-muted);
  margin-bottom: 0.25rem;
}

.sentence-builder-bank-words {
  display: flex;
  flex-wrap: wrap;
  gap: 0.35rem;
}

.sentence-builder-word {
  border-radius: 999px;
  border: 1px solid #cbd5f5;
  padding: 0.25rem 0.7rem;
  font-size: 0.9rem;
  background: #f8fafc;
  cursor: pointer;
  transition:
    background-color 0.15s ease,
    transform 0.1s ease,
    box-shadow 0.15s ease;
}

.sentence-builder-word:hover {
  background-color: #e5e7eb;
  box-shadow: 0 4px 10px rgba(148, 163, 184, 0.25);
  transform: translateY(-1px);
}

.sentence-builder-actions {
  margin-top: 0.6rem;
}

.sentence-builder-reset-button {
  font-size: 0.82rem;
}

/* Adverb Position (Time Expressions – propoziții cu două spații) */
.exercise-list.adverb-position-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.9rem;
}

.exercise-row--adverb-pos {
  padding: 0.85rem 1rem;
  border-radius: 1.1rem;
  background: var(--color-surface);
  box-shadow: var(--shadow-soft);
  border: 2px solid transparent;
  transition:
    border-color 0.15s ease,
    box-shadow 0.15s ease,
    background-color 0.15s ease;
}

.exercise-row--adverb-pos.exercise-row--correct {
  border-color: #22c55e;
  box-shadow: 0 8px 20px rgba(34, 197, 94, 0.25);
}

.exercise-row--adverb-pos.exercise-row--incorrect {
  border-color: #f97373;
  box-shadow: 0 8px 20px rgba(248, 113, 113, 0.25);
}

.adverb-pos-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 0.75rem;
}

.adverb-pos-sentence {
  margin: 0;
  font-size: 0.98rem;
  line-height: 1.5;
  display: flex;
  align-items: flex-start;
  gap: 0.4rem;
}

.adverb-pos-text {
  display: inline;
}

.adverb-pos-slot {
  border-radius: 999px;
  border: var(--lex-sb-zone-border);
  background: var(--lex-sb-zone-bg);
  padding: 0.1rem 0.8rem;
  min-width: 4.2rem;
  font-size: 0.9rem;
  cursor: pointer;
  transition:
    background-color 0.15s ease,
    transform 0.1s ease,
    border-color 0.15s ease,
    box-shadow 0.15s ease;
}

.adverb-pos-slot--filled {
  border-style: solid;
  border-color: #4f46e5;
  background: #eef2ff;
  box-shadow: 0 4px 10px rgba(79, 70, 229, 0.25);
}

.adverb-pos-slot:hover {
  background-color: #e0e7ff;
  transform: translateY(-1px);
}

.adverb-pos-word-label {
  margin: 0.35rem 0 0;
  font-size: 0.86rem;
  color: var(--color-text-muted);
}

.adverb-pos-word {
  font-weight: 600;
}

.sentence-builder-answer-content {
  flex: 1;
}

.sentence-builder-answer-zone .lex-voice-btn {
  flex-shrink: 0;
}
